@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="main-wrapper">
    <div class="account-content">
        <div class="login-wrapper">
            <div class="login-content">
                <form class="login-userset" id="account" method="post">
                    <div class="login-logo">
                        <img src="~/assets/img/logo.png" alt="img">
                    </div>
                    <div class="login-userheading">
                        <h3>Please login to your account</h3>
                        <hr />
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    </div>
                    <div class="form-login">
                        <label asp-for="Input.Email">Email</label>
                        <div class="form-addons">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <img src="~/assets/img/icons/mail.svg" alt="img">
                            <span asp-validation-for="Input.Email" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="form-login">
                        <label asp-for="Input.Password">Password</label>
                        <div class="pass-group">
                            <input asp-for="Input.Password" type="password" class="pass-input" placeholder="Enter your password">
                            <span class="fas toggle-password fa-eye-slash"></span>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>

                        </div>
                    </div>

                    <div class="d-flex align-content-center justify-content-between flex-wrap">
                        <div class="checkbox mb-3">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <div class="form-login">
                            <div class="alreadyuser">
                                <h4><a id="forgot-password" asp-page="./ForgotPassword" class="hover-a">Forgot Password?</a></h4>
                            </div>
                        </div>
                    </div>
                    <div class="form-login">
                        <button id="login-submit" type="submit" class="btn btn-login">Sign In</button>
                    </div>
                    <div class="signinform text-center">
                        <h4>Don’t have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="hover-a">Sign Up</a></h4>
                        <h4 class="mt-3"><a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="hover-a">Resend email confirmation</a></h4>
                    </div>
                </form>
            </div>
            <div class="login-img">
                <img src="~/assets/img/login.jpg" alt="img">
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
