@model IEnumerable<IMS.Models.Entity.StoreInfo>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Store Management";
    ViewData["SubTitle"] = "Store List";
}

<div class="row">
    <section class="comp-section comp-buttons">
        <div class="card bg-white">
            <div class="card-body d-flex align-items-center justify-content-end">
                <a class="btn btn-outline-primary" asp-controller="StoreInfo" asp-action="ManageStore">Add New Store</a>
            </div>
        </div>
    </section>
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header pb-0">
                <h5 class="card-title mb-0">Store List</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Address</th>
                                <th>Phone No.</th>
                                <th>Pan No.</th>
                                <th>Registration No.</th>
                                <th>Status</th>
                                <th>Action</th>

                            </tr>
                        </thead>
                       <tbody>
                            @foreach (var item in Model)
                            {
                           <tr>
                                    <td>@item.StoreName</td>
                                    <td>@item.Address</td>
                                    <td>@item.PhoneNumber</td>
                                    <td>@item.PanNo</td>
                                    <td>@item.RegistrationNo</td>
                                    <td>@item.IsActive</td>
                                    <td>
                                        <a class="btn btn-success" asp-action="ManageStore" asp-route-id="@item.Id" style="color: white;">Edit</a>
                                        <a class="btn btn-danger" onclick="return confirm('Do you want to delete this data ?')" asp-action="RemoveStudent" asp-route-id="@item.Id" style="color: white;">Delete</a>
                                    </td>
                           </tr>
                            }
                       </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>